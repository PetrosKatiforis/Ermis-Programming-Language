συνάρτηση λύσε_τριώνυμο(α, β, γ) {
  έστω διακρίνουσα = β * β - 4 * α * γ;

  εάν (διακρίνουσα < 0) {
    εμφάνισε ("Η εξίσωση είναι αδύνατη!");
  }

  αλλιώς εάν (διακρίνουσα > 0) {
    έστω χ1 = (-β + ρίζα(διακρίνουσα)) / (2 * α);
    έστω χ2 = (-β  - ρίζα(διακρίνουσα)) / (2 * α);

    εμφάνισε ("Λύση ένα: ", χ1, " Λύση δύο: ", χ2);
  }

  αλλιώς {
    έστω χ = -β / (2 * α);

    εμφάνισε ("Μοναδική λύση: ", χ);
  }
}

λύσε_τριώνυμο (1, 13, 36);
